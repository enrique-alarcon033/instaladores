<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_control_permission"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginVertical="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_control_icon"
            android:background="@color/clear"
            android:src="@drawable/panic_on"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="3dp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tv_control_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/iv_control_icon"
            android:layout_centerVertical="true"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@color/clear"
            android:elevation="3dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/sw_permission"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/tv_control_name"
            android:elevation="3dp"
            android:maxWidth="60dp"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>