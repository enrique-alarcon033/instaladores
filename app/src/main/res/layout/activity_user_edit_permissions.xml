<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_start">

    <TextView
        android:id="@+id/tv_user_permissions_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_user_permissions"
        android:textAlignment="center"
        android:layout_below="@id/top_menu"
        android:layout_marginTop="18sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/tv_guestName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_user_permissions"
        android:textAlignment="center"
        android:layout_below="@id/tv_user_permissions_title"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_user_permissions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_guestName"
        android:layout_marginStart="8dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        tools:listitem="@layout/item_control_permissions" />

    <include
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="?attr/actionBarSize"
        layout="@layout/yonusa_toolbar"/>

</RelativeLayout>